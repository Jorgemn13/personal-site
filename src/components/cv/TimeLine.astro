---
const { title, company, desc, start, end, image, _stopline = false } = Astro.props;
---

<li>
  <div class="relative pb-8">
    {_stopline == false && <span class="absolute top-6 left-6 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-400"/>}

    <div class="relative flex items-start space-x-3">
      <div class="avatar">
        <div class="w-12 rounded-full">
          <img  
          src={image}
          />
        </div> 
        
      </div>
      <div class="min-w-0 flex-1">
        <div>
          <div class="text-lg">
            <h3 class="font-semibold text-gray-800 dark:text-gray-100">{title}</h3>
          </div>
          <div>
            <p class="font-medium text-gray-600 dark:text-gray-400">{company}</p>
          </div>
            <p class="mt-0.5 text-sm text-gray-500">
              {start} - {end}
            </p>
        </div>
        <div class="mt-2 text-sm text-gray-700 dark:text-gray-400">
            <p>
              {desc}
            </p>
        </div>
      </div>
    </div>
  </div>
</li>
